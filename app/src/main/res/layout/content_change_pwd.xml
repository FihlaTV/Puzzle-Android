<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="studio.androiddev.puzzle.activity.ChangePwdActivity"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_change_pwd"
    android:orientation="vertical"
    android:layout_gravity="center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/lock"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/et_pwd_old"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="原始密码"
        android:background="@mipmap/input"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/personTextColor"
        android:textColorHint="@color/personTextColor"/>

    <EditText
        android:id="@+id/et_pwd_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="新密码"
        android:background="@mipmap/input"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/personTextColor"
        android:textColorHint="@color/personTextColor"/>

    <EditText
        android:id="@+id/et_confirm_new_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认新密码"
        android:background="@mipmap/input"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/personTextColor"
        android:textColorHint="@color/personTextColor"/>


    <Button
        android:id="@+id/btn_changePwd_confirm"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定修改"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_background"
        android:textColor="@color/white"/>

</LinearLayout>
