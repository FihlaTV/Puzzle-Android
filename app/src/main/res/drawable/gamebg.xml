<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 一个层叠效果,通过阴影表现出立体效果 -->
    <item><!-- 阴影效果 -->
    <shape android:shape="rectangle" >
        <solid android:color="@color/mdarklight" /><!-- 阴影的颜色 -->
        <corners android:radius="10dp"></corners>
    </shape>
    </item>
    <item
        android:bottom="5dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"><!-- 阴影效果 -->
        <shape android:shape="rectangle" >
            <solid android:color="@color/halfwhite" /><!-- 阴影的颜色 -->
            <corners android:radius="10dp"></corners>
        </shape>
    </item>
    <item
        android:bottom="15dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"><!-- 距底部2dp，漏出上面那个item，使其可以显现出阴影 -->
        <shape android:shape="rectangle" >
            <solid android:color="@color/ricewhite" /><!-- item颜色 -->
        </shape>
    </item>
</layer-list>